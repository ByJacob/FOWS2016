<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="pl.kebapp.byjacob.fows2016.FragmentyGlowne.OKonferencji"
                android:background="@android:color/background_light">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/wg_zdjecie"
                android:id="@+id/imageView14"
                android:adjustViewBounds="true"/>

            <WebView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/webview_text1"/>

            <TextView
                android:text="Future of Wireless System 2010"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.TextView.PopupMenu"
                android:layout_margin="5dp"
                android:id="@+id/textView_fows2010"
                android:paddingLeft="5dp"/>

            <TextView
                android:text="Future of Wireless System 2011"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_fows2011"
                android:layout_margin="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.TextView.PopupMenu"
                android:paddingLeft="5dp"/>

            <TextView
                android:text="Future of Wireless System 2012"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_fows2012"
                android:layout_margin="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.TextView.PopupMenu"
                android:paddingLeft="5dp"/>

            <TextView
                android:text="Future of Wireless System 2013"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_fows2013"
                android:padding="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.TextView.PopupMenu"
                android:layout_marginLeft="5dp"/>

            <WebView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/webview_text2"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/starzy_sponsorzy"
                android:id="@+id/imageView6"
                android:adjustViewBounds="true"
                android:padding="5dp"/>

            <WebView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/webview_text3"/>

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/okonferencji_male_okno">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="50dp"
            android:animateLayoutChanges="true"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:clickable="false">

            <ImageButton
                android:id="@+id/button_close_male_okonferencji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:background="@color/transparent"
                app:srcCompat="@drawable/ic_stat_name"/>

            <ImageView
                android:id="@+id/male_okno_zdjecie_okonferencji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_close_male_okonferencji"
                android:layout_marginRight="20dp"
                android:adjustViewBounds="true"
                android:maxHeight="100dp"
                android:minHeight="19dp"
                app:srcCompat="@color/transparent"
                android:layout_marginLeft="3dp"
                android:layout_centerHorizontal="true"/>

            <ScrollView
                android:id="@+id/prelegenci_scroll_view_okonferencji"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/male_okno_zdjecie_okonferencji"
                android:layout_margin="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_male_okno_okonferencji"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.SearchResult.Subtitle"
                        android:padding="20dp"
                        android:gravity="center_vertical|center_horizontal"/>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:srcCompat="@color/transparent"
            android:id="@+id/imageView_close_male_okonferencjiL"
            android:clickable="true"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:srcCompat="@color/transparent"
            android:id="@+id/imageView_close_male_okonferencjiG"
            android:clickable="true"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:srcCompat="@color/transparent"
            android:id="@+id/imageView_close_male_okonferencjiP"
            android:clickable="true"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:srcCompat="@color/transparent"
            android:id="@+id/imageView_close_male_okonferencjiD"
            android:clickable="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</RelativeLayout>
