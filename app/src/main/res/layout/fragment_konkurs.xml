                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/y31konkurs"
                        android:id="@+id/imageView301"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:layout_margin="5dp"
                        android:foregroundGravity="center_vertical|center_horizontal"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/y32konkurs"
                        android:id="@+id/imageView311"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/y33konkurs"
                        android:id="@+id/imageView321"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"/>

                </LinearLayout>
            </LinearLayout>

        </FrameLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editTextkonkurs_album"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:layout_marginRight="20dp"
            android:layout_alignBaseline="@+id/textViewkonkurs_album"
            android:layout_toEndOf="@+id/textViewkonkurs_album"
            android:layout_alignParentRight="true"
            android:inputType="text"/>

    </RelativeLayout>

    <RelativeLayout
