<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="pl.kebapp.byjacob.fows2016.FragmentyGlowne.Konkurs">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/background_light"
        android:visibility="visible"
        android:id="@+id/relativ_rejstracja">

        <TextView
            android:text="@string/zarejestruj_sie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textViewkonkurs_zarejstruj"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textSize="44sp"
            android:layout_margin="10dp"
            />

        <TextView
            android:text="@string/imie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewkonkurs_zarejstruj"
            android:layout_alignParentStart="true"
            android:id="@+id/textViewkonkurs_imie"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:text="@string/nazwisko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewkonkurs_imie"
            android:layout_alignParentStart="true"
            android:id="@+id/textViewkonkurs_nazwisko"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:text="@string/album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewkonkurs_nazwisko"
            android:layout_alignParentStart="true"
            android:id="@+id/textViewkonkurs_album"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextkonkurs_imie"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:layout_alignBottom="@+id/textViewkonkurs_imie"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_alignBaseline="@+id/textViewkonkurs_imie"
            android:layout_toEndOf="@+id/textViewkonkurs_imie"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextkonkurs_nazwisko"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:layout_alignBottom="@+id/textViewkonkurs_nazwisko"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_alignBaseline="@+id/textViewkonkurs_nazwisko"
            android:layout_toEndOf="@+id/textViewkonkurs_nazwisko"
            />

        <Button
            android:text="@string/zapisz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewkonkurs_album"
            android:layout_centerHorizontal="true"
            android:id="@+id/buttonkonkurs_zapisz"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonkonkurs_zapisz"
            android:layout_marginTop="60dp"
            android:layout_alignParentBottom="false">
            <LinearLayout
